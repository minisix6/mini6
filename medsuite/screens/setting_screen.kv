SettingScreen:
    name:'setting_s'
    MDBoxLayout:
        orientation:'vertical'
        size_hint:1 , 1
        padding:(10,10)
        MDBoxLayout:
            orientation:'vertical'
            size_hint:1 , .3
            spacing:'10dp'
            md_bg_color:app.theme_cls.bg_light
            opacity:.8
            radius:10
            TitleText:
                text:'Language'
                size_hint_y:.5
                padding:(10,10)
            MDBoxLayout:
                id: language
                adaptive_size: True
                padding: "10dp"
                spacing:'5dp'
                size_hint_y:.5
                MyChip1:
                    id : English
                    text: "English"
                    on_active: if self.active: app.language_chips(self)
                MyChip1:
                    id:Persian
                    text: "Persian"
                    on_active: if self.active: app.language_chips(self)
        MDWidget:
            size_hint:.05,.05
        MDBoxLayout:
            orientation:'vertical'
            size_hint:1 , .3
            md_bg_color:app.theme_cls.bg_light
            opacity:.8
            radius:10
            TitleText:
                text:'Theme'
                size_hint_y:.5
                padding:(10,10)
            MDBoxLayout:
                id: theme
                adaptive_size: True
                padding: "10dp"
                spacing:'5dp'
                size_hint_y:.5
                MyChip1:
                    id :Dark
                    text: "Dark"
                    on_active: if self.active: app.theme_chips(self)
                MyChip1:
                    id:Light
                    text: "Light"
                    on_active: if self.active: app.theme_chips(self)
        MDWidget:
            size_hint:.05,.05
        MDBoxLayout:
            orientation:'vertical'
            size_hint:1 , .3
            md_bg_color:app.theme_cls.bg_light
            opacity:.8
            radius:10
            TitleText:
                text:'Font size'
                size_hint_y:.5
                padding:(10,10)
            MDBoxLayout:
                id: app_text_size
                adaptive_size: True
                padding: "10dp"
                spacing:'5dp'
                MyChip1:
                    id: Small
                    text: "Small"
                    on_active: if self.active: app.size_chips(self)
                MyChip1:
                    id: Medium
                    text: "Medium"
                    on_active: if self.active: app.size_chips(self)
                MyChip1:
                    id: Large
                    text: "Large"
                    on_active: if self.active: app.size_chips(self)
        MDWidget:
            size_hint:.05,.05
        MDBoxLayout:
            size_hint:1 , .2
            padding:(5,5)
            md_bg_color:app.theme_cls.bg_light
            opacity:.8
            radius:10
            MDCheckbox:
                id: notification
                size_hint:None ,None
                size:'48dp' , '48dp'
            LineText:
                text:'Notification'
                padding:(10,10)

        TitleText:
            text:'colors'
            size_hint_y:.2

        MDBoxLayout:
            orientation:'vertical'
            MDGridLayout:
                cols:3
                rows:4
                LineText:
                    md_bg_color:app.theme_cls.bg_light
                    text:'bg_light'
                LineText:
                    md_bg_color:app.theme_cls.bg_normal
                    text:'bg_normal'
                LineText:
                    md_bg_color:app.theme_cls.bg_dark
                    text:'bg_dark'
                LineText:
                    md_bg_color:app.theme_cls.primary_light
                    text:'primary_light'
                LineText:
                    md_bg_color:app.theme_cls.primary_color
                    text:'primary_color'
                LineText:
                    md_bg_color:app.theme_cls.primary_dark
                    text:'primary_dark'
                LineText:
                    md_bg_color:app.theme_cls.accent_light
                    text:'accent_light'
                LineText:
                    md_bg_color:app.theme_cls.accent_color
                    text:'accent_color'
                LineText:
                    md_bg_color:app.theme_cls.accent_dark
                    text:'accent_dark'
        MDWidget:
            size_hint:.05,.05
        MDBoxLayout:
            size_hint:1 , .2
            padding:(5,5)
            md_bg_color:app.theme_cls.bg_light
            opacity:.8
            radius:10
            MDFlatButton:
                text:'dark'
                on_press:app.change_theme('Dark')
            MDFlatButton:
                text:'light'
                on_press:app.change_theme('Light')
            MDFlatButton:
                id:but2
                text:'back'
                on_press: app.save_setting()
