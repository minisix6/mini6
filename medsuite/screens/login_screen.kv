LoginScreen:
    name:'login_scr'
    ToolbarIconButton:
        icon:'close'
        on_press:app.stop()
        pos_hint:{'center_x':.9, 'center_y':.95}
    ToolbarIconButton:
        icon:'help'
        on_press:app.go_to_screen('help_scr')
        pos_hint:{'center_x':.8, 'center_y':.95}
    LineText:
        text:"Import your username and password"
        halign: 'center'
        pos_hint:{'center_x':.5 , 'center_y':.85}
    InputField:
        id:user_name_field
        hint_text:"User name"
        icon_left :"account"
        helper_text: "Username"
        #helper_text_mode:"persistent"
        max_text_length: 30
        pos_hint:{'center_x':.5 , 'center_y':.75}
    InputField:
        id: pass_field
        hint_text:"Password"
        helper_text: "Password"
        max_text_length: 20
        # required:True
        password:True
        icon_left:"key-variant"
        pos_hint:{'center_x':.5 , 'center_y':.65}
    MDIconButton:
        icon:"eye-off"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else 'eye-off'
            pass_field.password = False if pass_field.password is True else True
            self.icon_color = app.theme_cls.primary_color if self.icon == 'eye' else app.theme_cls.accent_light
        pos_hint:{'center_x':.8 , 'center_y':.65}
    MDRoundFlatIconButton:
        id : pass_check
        text:'Remember me'
        icon:'crop-square'
        size_hint:(.5, .01)
        pos_hint:{'center_x':.35, 'center_y':.5}
        on_press:self.icon = 'checkbox-marked-outline' if self.icon == 'crop-square' else 'crop-square'

    MDRaisedButton:
        id:login_button
        text:'Login'
        on_release: app.log_in()
        pos_hint:{'center_x':.5 , 'center_y':.4}
    MDFlatButton:
        text: 'Forget password ?'
        on_press: app.forget_password(None)
        pos_hint:{'x':.1 , 'center_y':.3}
    MDFlatButton:
        pos_hint:{'x':.1 , 'center_y':.25}
        text:"SignUp"
        on_press:app.go_to_screen('signup_scr')
    MDFlatButton:
        pos_hint:{'x':.1 , 'center_y':.2}
        text:"Demo"
        on_press:app.go_to_screen('home_s')
