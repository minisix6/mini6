HomeScreen:
    name:'home_scr'
    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            id:top_app
            elevation:0
            specific_text_color:app.theme_cls.primary_light
            title:'MedSuite'
            pos_hint:{'top':1}
            type:'top'
            left_action_items:
                [['menu', lambda x: nav_drawer.set_state("open")]]
            right_action_items:
                [
                ['help', lambda x: app.go_to_screen('help_s')],
                ['autorenew', lambda x: app.go_to_screen('refresh_s')],
                ['chat', lambda x: app.go_to_screen('chat_s')],
                ['apps', lambda x: app.go_to_screen('apps_s')],
                ]
        SubSm:
            id: sm_sub
            Screen:
                name :'home_s'
                LineText:
                    id:label1
                    text: "My Content"
                    text_color:app.theme_cls.primary_light
                MDIcon:
                    icon:'gmail'
                    badge_icon:'numeric-10'
                    pos_hint:{'x':.5 ,'y':.5}
                MDFlatButton:
                    text:'test'
                    on_press:app.test()
                MDFloatingActionButtonSpeedDial:
                    id: speed_dial
                    icon:'star-outline'
                    elevation:0
                    data: app.floating_data
                    #on_press_stack_button:app.go_app(*args)
                    #callback:app.callback()
                    root_button_anim: True


            Screen:
                name:'screen2'
                MDFlatButton:
                    text:'test2'
                    font_style:'H6'
                    on_press:sm_sub.current='screen1'

    MDNavigationDrawer:
        id: nav_drawer
        MDScrollView:
            MDList:
                MDIconButton:
                    icon:"arrow-left"
                    on_press: nav_drawer.set_state("close")
                MDNavigationDrawerHeader:
                    title: "MedSuite"
                    text: "Demo"
                    spacing: "2dp"
                    padding: "5dp", 0, 0, "5dp"
                    theme_text_color:'Custom'
                    text_color:app.theme_cls.primary_light
                    title_color: app.theme_cls.primary_light
                MDNavigationDrawerDivider:
                OneLineList:
                    text: 'apps'
                    on_press:
                        app.go_to_screen('apps_s')
                        nav_drawer.set_state("close")
                    IconLeftWidget:
                        icon: 'apps'
                        on_press:
                            app.go_to_screen('apps_s')
                            nav_drawer.set_state("close")
                OneLineList:
                    text: 'calculator'
                    on_press:
                        app.go_to_screen('calculator_s')
                        nav_drawer.set_state("close")
                    IconLeftWidget:
                        icon: 'calculator'
                        on_press:
                            app.go_to_screen('calculator_s')
                            nav_drawer.set_state("close")

                OneLineList:
                    text: 'account'
                    on_press:
                        app.go_to_screen('account_s')
                        nav_drawer.set_state("close")
                    IconLeftWidget:
                        icon: 'account-edit'
                        on_press:
                            app.go_to_screen('account_s')
                            nav_drawer.set_state("close")
                OneLineList:
                    text: 'Setting'
                    on_press:
                        app.go_to_screen('setting_s')
                        nav_drawer.set_state("close")
                    IconLeftWidget:
                        icon: 'cog'
                        on_press:
                            app.go_to_screen('setting_s')
                            nav_drawer.set_state("close")
                OneLineList:
                    text: 'Contact us'
                    on_press:
                        app.go_to_screen('load_scr')
                        nav_drawer.set_state("close")
                    IconLeftWidget:
                        icon: 'phone'
                        on_press:
                            app.go_to_screen('load_scr')
                            nav_drawer.set_state("close")
                OneLineList:
                    text: 'Log out'
                    on_press:
                        app.go_to_screen('login_scr')
                        nav_drawer.set_state("close")
                    IconLeftWidget:
                        icon: 'logout'
                        on_press:
                            app.go_to_screen('login_scr')
                            nav_drawer.set_state("close")
                OneLineList:
                    text: 'Close App'
                    on_press: app.stop()
                    IconLeftWidget:
                        icon: 'close'
                        on_press:app.stop()

