<BaseButton>:
    elevation:2
    ripple_scale:0
    theme_text_color:"Custom"
    theme_icon_color:"Custom"
    text_color:app.theme_cls.accent_light
<MDLabel>:
    font_size :app.theme_font_size
<LineText>:
    opposite_color:True
    font_size :app.theme_font_size
    padding:(8,8)
    theme_text_color:'Custom'
    text_color :app.theme_cls.primary_light
    #text_color:1,0,0,1
    opacity:.9
<TitleText>:
    opposite_color:True
    font_size :app.theme_font_size * 1.2
    padding:(8,8)
    theme_text_color:'Custom'
    text_color :app.theme_cls.primary_color
    opacity:.95
<MDRoundFlatIconButton>:
    theme_text_color:"Custom"
    md_bg_color:app.theme_cls.bg_normal
    text_color:app.theme_cls.accent_light
    line_color:app.theme_cls.bg_normal
    font_size :app.theme_font_size
    size_hint:(.5 , .08)
    halign:'center'
    ripple_scale:0
    opacity:.9
<MDFlatButton>:
    font_size :app.theme_font_size * 1.1
    halign:'center'
    ripple_scale:0
    opacity:.95
<MDTextButton>:
    spacing:10
    font_size :app.theme_font_size * 1.1
    bold:True
    size_hint:(.9 , .08)
    halign:'center'
    theme_text_color:"Custom"
    md_bg_color:app.theme_cls.primary_color
    text_color:app.theme_cls.bg_normal
    #line_color:app.theme_cls.primary_color
    #text_color:self.theme_cls.primary_color
    opacity:.9
<MDRaisedButton>:
    font_size :app.theme_font_size * 1.1
    theme_text_color:"Custom"
    md_bg_color:app.theme_cls.bg_light
    text_color:app.theme_cls.accent_light
    size_hint:(.8 , .02)
    opacity:1
<InputField>:
    mode: 'fill'
    font_size :app.theme_font_size
#    show_active_line : True
    size_hint_y:None
    height:1
    size_hint_x:.8
    #helper_text_mode:"persistent"
    text_color_normal:app.theme_cls.accent_color
    text_color_focus:app.theme_cls.primary_light
    fill_color_normal:app.theme_cls.accent_dark
    fill_color_focus:app.theme_cls.bg_light
    hint_text_color_focus:app.theme_cls.primary_light
    hint_text_color_normal:app.theme_cls.bg_dark
    line_color_normal:app.theme_cls.accent_light
    line_color_focus:app.theme_cls.primary_light
    icon_left_color_normal:app.theme_cls.bg_light
    icon_left_color_focus:app.theme_cls.primary_light
    helper_text_color_normal:app.theme_cls.bg_dark
    helper_text_color_focus:app.theme_cls.accent_color
    opacity:1
<MDIconButton>:
    font_size :app.theme_font_size * 1.2
    theme_icon_color:'Custom'
    icon_color:app.theme_cls.accent_light
    disabled_color:app.theme_cls.primary_dark
    ripple_scale:0
    opacity:1

<ExpansionPanel>:
    font_style:app.theme_font_style1
    secondary_font_style:app.theme_font_style2
    radius:[5 ,5 ,5 ,5]
    theme_text_color:'Custom'
    text_color:app.theme_cls.bg_normal
    secondary_theme_text_color:'Custom'
    secondary_text_color:app.theme_cls.bg_light
    bg_color:app.theme_cls.primary_color
    opacity:.9
<OneLineList>:
    font_style:app.theme_font_style1
    radius:[5 ,5 ,5 ,5]
    theme_text_color:'Custom'
    text_color:app.theme_cls.accent_light
    bg_color:app.theme_cls.bg_light
    opacity:.9

<MDNavigationDrawer>:
    md_bg_color:app.theme_cls.bg_light

<IconLeftWidget>:
    user_font_size: app.theme_font_size
    theme_text_color:'Custom'
    theme_icon_color:'Custom'
    text_color:app.theme_cls.primary_color
    icon_color:app.theme_cls.primary_color
    ripple_scale:0
    opacity:.9
<MDDialog>:
    theme_text_color:'Custom'
    md_bg_color:app.theme_cls.bg_light
    text_color:app.theme_cls.primary_light
    opacity:.9
<MDIcon>:
    font_size:app.theme_font_size * 1.2
    theme_text_color:'Custom'
    #text_color:app.theme_cls.accent_color
    icon_color:app.theme_cls.primary_light
    size_hint:None ,None
    size:(.1,.1)
    pos_hint:{'center_y':.5}
    ripple_scale:0
    opacity:.9

<CustomSnackbar>

    MDIconButton:
        pos_hint: {'center_y': .5}
        icon: root.icon
        #opposite_colors: True

    MDLabel:
        id: text_bar
        size_hint_y: None
        height: self.texture_size[1]
        text: root.text
        font_size: root.font_size
        theme_text_color: 'Custom'
        text_color:app.theme_cls.accent_light
        shorten: True
        shorten_from: 'right'
        pos_hint: {'center_y': .5}

<MDFloatingActionButtonSpeedDial>:
    bg_color_root_button:app.theme_cls.bg_normal
    bg_color_stack_button:app.theme_cls.bg_normal
    label_bg_color:app.theme_cls.bg_normal
    label_text_color:app.theme_cls.accent_light
    color_icon_stack_button:app.theme_cls.accent_light
    color_icon_root_button:app.theme_cls.accent_light
    opacity:1
<MDTopAppBar>:
    md_bg_color:app.theme_cls.bg_normal
    opacity:.9